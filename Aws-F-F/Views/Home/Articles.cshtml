@model IEnumerable<Aws_F_F.Models.Article>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

<section class="container my-5">
    <h2 class="text-center mb-4">المقالات</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card p-3 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top mb-3" alt="صورة المقال" style="max-height: 200px; object-fit: cover;" />
                    }

                    <h5>@item.Title</h5>
                    <small class="text-muted">@item.PublishDate.ToString("yyyy-MM-dd")</small>

                    <a asp-action="ArticleDetails" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mt-2">قراءة المقال</a>
                </div>
            </div>
        }
    </div>
</section>
