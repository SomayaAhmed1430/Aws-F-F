@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "تسجيل دخول";
}

<h2 class="text-center">تسجيل دخول لوحة التحكم</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

<style>
    input{
        width: calc( 100% - 30px);
        height: 30px;
        font-size: 14px;
    }

    form {
        position:relative;
        padding: 0;
        box-shadow:none;
    }
    label{
        font-size: 14px;
    }
    .alert-danger{
        color:red;
        height: 30px;
        width: calc( 100% - 60px);
        background: #ff000030;
		display: flex;
        align-items: center;
        justify-content:start;
        padding: 5px 20px;
        margin-bottom:  10px ;
        border-radius: 4px;
        font-size: 14px;
    }
</style>
<form method="post" asp-action="Admin" asp-controller="Home">
    <div class="form-group">
        <label>كلمة المرور</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">دخول</button>
</form>
