@model Aws_F_F.Models.Article

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<section class="container my-5">
    <div class="card p-4 shadow-sm">
        @* @if (!string.IsNullOrEmpty(Model.ImagePath)) *@
        @* { *@
        @*     <img src="@Model.ImagePath" class="img-fluid mb-4" style="max-height: 300px; object-fit: cover;" alt="صورة المقال" /> *@
        @* } *@

        <h2 class="mb-3">@Model.Title</h2>
        <small class="text-muted">@Model.PublishDate.ToString("yyyy-MM-dd")</small>

        <hr />

        <div class="article-content">
            @Html.Raw(Model.Content)
        </div>

        <a asp-action="Articles" class="btn btn-secondary mt-3">الرجوع للمقالات</a>
    </div>
</section>

<style>
    .article-content {
        direction: rtl;
    }

        .article-content img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 10px auto;
        }

        /* دعم المحاذاة اللي Quill بيضيفها كـ class */
        .article-content .ql-align-center {
            text-align: center;
        }

        .article-content .ql-align-right {
            text-align: right;
        }

        .article-content .ql-align-left {
            text-align: left;
        }

        .article-content p,
        .article-content div,
        .article-content h1,
        .article-content h2 {
            margin-bottom: 1rem;
        }
</style>