@model IEnumerable<Aws_F_F.Models.Article>

<h2>قائمة المقالات</h2>

<a class="btn btn-primary" asp-action="Create">إضافة مقال جديد</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>العنوان</th>
            <th>الصورة</th>
            <th>تاريخ النشر</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" width="100" />
                    }
                </td>
                <td>@item.PublishDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">عرض</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">تعديل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
