@model Video
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "تعديل الفيديو";
}

<h2>تعديل الفيديو</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>تاريخ الرفع</label>
        <input asp-for="UploadDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>فيديو جديد (اختياري)</label>
        <input type="file" name="newVideoFile" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
